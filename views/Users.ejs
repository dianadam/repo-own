<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title>Penjadwalan Anak</title>
  <link rel="stylesheet" href="/style.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<h3>Daftar Orangtua</h3>

<a href="/users/new" class="btn btn-success mb-3">+ Tambah User</a>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Username</th>
      <th>Aksi</th>
    </tr>
  </thead>
  <tbody>
    <% users.forEach(u => { %>
      <tr>
        <td><%= u.username %></td>
        <td>
          <a href="/users/edit/<%= u._id %>" class="btn btn-sm btn-warning">Edit</a>
          <form action="/users/delete/<%= u._id %>" method="POST" style="display:inline;">
            <button type="submit" class="btn btn-sm btn-danger">Hapus</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>