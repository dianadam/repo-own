<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title>Penjadwalan Anak</title>
  <link rel="stylesheet" href="/style.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<h3>Edit Jadwal</h3>

<form action="/edit/<%= schedule._id %>" method="POST">
  <div class="mb-3">
    <label>Judul Kegiatan</label>
    <input type="text" name="title" class="form-control" value="<%= schedule.title %>" required>
  </div>
  <div class="mb-3">
    <label>Pilih Anak</label>
    <select name="childName" class="form-select">
      <% children.forEach(c => { %>
        <option value="<%= c.name %>" <%= c.name===schedule.childName?"selected":"" %>><%= c.name %></option>
      <% }) %>
    </select>
  </div>
  <div class="mb-3">
    <label>Start Date</label>
    <input type="date" name="Startdate" class="form-control" value="<%= schedule.Startdate ? schedule.Startdate.toISOString().substring(0,10) : "" %>">
  </div>
  <div class="mb-3">
    <label>End Date</label>
    <input type="date" name="Enddate" class="form-control" value="<%= schedule.Enddate ? schedule.Enddate.toISOString().substring(0,10) : "" %>">
  </div>
  <div class="mb-3">
    <label>Status</label>
    <select name="status" class="form-select">
      <option <%= schedule.status==="Belum mulai"?"selected":"" %>>Belum mulai</option>
      <option <%= schedule.status==="Sedang dilakukan"?"selected":"" %>>Sedang dilakukan</option>
      <option <%= schedule.status==="Selesai"?"selected":"" %>>Selesai</option>
    </select>
  </div>
  <button class="btn btn-primary">Update</button>
</form>
